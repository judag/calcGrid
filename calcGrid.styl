// v1.0.0

gutter = 20px

row(gut = gutter)
  > div
    overflow: hidden
    margin-left: -(gut / 2)
    margin-right: -(gut / 2)

column(ratio = 1, gut = gutter)
  float: left
  if gut > 0
    width: s('calc(100% * %s - %s)', ratio, gut)
    margin-left: (gut / 2)
    margin-right: (gut / 2)
  if gut is 0
    width: s('calc(100% * %s)', ratio)

offset(ratio = false, gut = gutter)
  if gut > 0
    if ratio > 0
      margin-left: s('calc(100% * %s + (%s / 2))', ratio, gut)
    if ratio < 0
      margin-right: s('calc(-100% * %s + (%s / 2))', ratio, gut)
  if gut is 0
    if ratio > 0
      margin-left: s('calc(100% * %s)', ratio)
    if ratio < 0
      margin-right: s('calc(-100% * %s)', ratio)


shift(ratio = false, gut = gutter)
  position: relative
  if gut > 0
    if ratio > 0
      left: s('calc(100% * %s - %s + %s)', ratio, gut, gut)
    if ratio < 0
      left: s('calc(100% * %s - %s + %s)', ratio, gut, gut)
  if gut is 0
    if ratio > 0
      left: s('calc(100% * %s)', ratio)
    if ratio < 0
      left: s('calc(100% * %s)', ratio)
